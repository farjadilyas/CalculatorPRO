<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    android:backgroundTint="?attr/bgColor"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ToolbarTheme"
            app:titleTextColor="?attr/textColor" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/foregroundColor"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/BTLD"
            style = "@style/toolbar_icon"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_light_bulb" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="14dp"
        android:layout_height="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:freezesText="true"
        android:inputType="numberDecimal"
        android:textColor="?attr/textColor"
        app:layout_constraintBottom_toTopOf="@+id/CBT8"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/CALOUT"
        style="@style/textbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:freezesText="true"
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/CBTHIST"
        app:layout_constraintEnd_toStartOf="@+id/CBTBKSP"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <Button
        android:id="@+id/CBT4"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="4"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT1"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Button
        android:id="@+id/CBT7"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="7"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT4"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Button
        android:id="@+id/CBTD"
        style="@style/numpadsm"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:text="."
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Button
        android:id="@+id/CBT0"
        style="@style/numpadsm"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:text="0"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <Button
        android:id="@+id/CBTC"
        style="@style/numpadsm"
        android:layout_marginBottom="16dp"
        android:elevation="0dp"
        android:text="C"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/CBT2"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT0"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <Button
        android:id="@+id/CBT1"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="1"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTD"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Button
        android:id="@+id/CBT3"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="3"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTC"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/CBT8"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="8"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <Button
        android:id="@+id/CBT5"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="5"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3" />

    <Button
        android:id="@+id/CBT6"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="6"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT3"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/CBT9"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="9"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT6"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/CBTE"
        style="@style/numpadsm"
        android:layout_marginBottom="16dp"
        android:text="\u0065"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/CBTPI"
        tools:text="\u0065" />

    <Button
        android:id="@+id/CBTPOW"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="x\u207F"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTE"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/CBTSQRT"
        tools:text="x\u207F" />

    <Button
        android:id="@+id/CBTFRAC"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="1\u2044x"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTPOW"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/CBTLOG"
        tools:text="1\u2044x" />

    <Button
        android:id="@+id/CBTTAN"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="tan"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTFRAC"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@+id/CBTCOS"
        tools:text="tan" />

    <Button
        android:id="@+id/CBTCLBCK"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text=")"
        android:textAllCaps="false"
        android:textColor="@color/colorGreen"
        app:layout_constraintBottom_toTopOf="@+id/CBT8"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        tools:text=")" />

    <Button
        android:id="@+id/CBTPI"
        style="@style/numpadsm"
        android:layout_marginBottom="16dp"
        android:text="\u03C0"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="\u03C0" />

    <Button
        android:id="@+id/CBTSQRT"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="\u221A"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTPI"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="\u221A" />

    <Button
        android:id="@+id/CBTLOG"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="log"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTSQRT"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="log" />

    <Button
        android:id="@+id/CBTCOS"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="cos"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTLOG"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="cos" />

    <Button
        android:id="@+id/CBTOPBCK"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="("
        android:textColor = "@color/colorGreen"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBT7"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        tools:text="(" />

    <Button
        android:id="@+id/CBTPCNT"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="%"
        android:textColor="@color/colorGreen"
        app:layout_constraintBottom_toTopOf="@+id/CBT9"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <Button
        android:id="@+id/CBTABS"
        style="@style/numpadsm"
        android:layout_marginBottom="16dp"
        android:text="|x|"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CBTPI"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="|x|" />

    <Button
        android:id="@+id/CBTEXP"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="e\u207F"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTABS"
        app:layout_constraintEnd_toStartOf="@+id/CBTSQRT"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="e\u207F" />

    <Button
        android:id="@+id/CBTNLOG"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="ln"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTEXP"
        app:layout_constraintEnd_toStartOf="@+id/CBTLOG"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ln" />


    <Button
        android:id="@+id/CBTSIN"
        style="@style/numpadsm"
        android:layout_marginBottom="8dp"
        android:text="sin"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/CBTNLOG"
        app:layout_constraintEnd_toStartOf="@+id/CBTCOS"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="sin" />

    <Button
        android:id="@+id/CBTPLUS"
        style="@style/numpadopsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/CBTCAL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/CBTSUB"
        style="@style/numpadopsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/CBTPLUS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/CBTMUL"
        style="@style/numpadopsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="\u00D7"
        app:layout_constraintBottom_toTopOf="@+id/CBTSUB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/CBTDIV"
        style="@style/numpadopsm"
        android:layout_marginBottom="8dp"
        android:elevation="0dp"
        android:text="\u00F7"
        app:layout_constraintBottom_toTopOf="@+id/CBTMUL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/CBTCAL"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorGreen"
        android:elevation="0dp"
        android:hapticFeedbackEnabled="true"
        android:radius="20dp"
        android:text="\u003D"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <ImageButton
        android:id="@+id/CBTCONV"
        style="@style/shortcutssm"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/CBTCOS"
        app:layout_constraintEnd_toEndOf="@+id/CBTCOS"
        app:layout_constraintStart_toStartOf="@+id/CBTCOS"
        app:srcCompat="@drawable/ic_straighten_24px" />

    <ImageButton
        android:id="@+id/CBTHIST"
        style="@style/shortcutssm"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/CBTSIN"
        app:layout_constraintEnd_toEndOf="@+id/CBTSIN"
        app:layout_constraintStart_toStartOf="@+id/CBTSIN"
        app:srcCompat="@drawable/btn_history" />

    <ImageButton
        android:id="@+id/CBTADV"
        style="@style/shortcutssm"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/CBTTAN"
        app:layout_constraintEnd_toEndOf="@+id/CBTTAN"
        app:layout_constraintStart_toStartOf="@+id/CBTTAN"
        app:srcCompat="@drawable/btn_advanced" />

    <ImageButton
        android:id="@+id/CBTBKSP"
        style="@style/shortcutssm"
        android:layout_width="75dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toTopOf="@+id/CBTDIV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:srcCompat="@drawable/ic_backspace_24px" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/HistoryBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:background="?attr/bgColor"
        android:elevation="8dp"
        android:orientation="vertical"
        android:outlineProvider="none"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/CBTPI"
        app:layout_constraintEnd_toEndOf="@+id/CBTFRAC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CBTCONV">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/CLRHIST"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:id="@+id/HistoryLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/CLRHIST"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </ScrollView>

        <Button
            android:id="@+id/CLRHIST"
            style="@style/clrhistbtn"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center"
            android:text="Clear History"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Clear History" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.71956223" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5827633" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8618331" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44596443" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/foregroundLightColor"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/CBTOPBCK"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CALOUT"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/foregroundLightColor"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CBTMUL"
        app:layout_constraintStart_toEndOf="@+id/CBT9"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>